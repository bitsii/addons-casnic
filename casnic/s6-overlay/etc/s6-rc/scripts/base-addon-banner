#!/command/with-contenv bashio
# shellcheck shell=bash
# ==============================================================================
# Home Assistant Community Add-on: Base Images
# Displays a simple add-on banner on startup
# ==============================================================================
if bashio::supervisor.ping; then
    bashio::log.blue \
        '-----------------------------------------------------------'
    bashio::log.blue " Add-on: $(bashio::addon.name)"
    bashio::log.blue " $(bashio::addon.description)"
    bashio::log.blue \
        '-----------------------------------------------------------'

    bashio::log.blue " Add-on version: $(bashio::addon.version)"
    if bashio::var.true "$(bashio::addon.update_available)"; then
        bashio::log.magenta ' There is an update available for this add-on!'
        bashio::log.magenta \
            " Latest add-on version: $(bashio::addon.version_latest)"
        bashio::log.magenta ' Please consider upgrading as soon as possible.'
    else
        bashio::log.green ' You are running the latest version of this add-on.'
    fi

    bashio::log.blue " System: $(bashio::info.operating_system)" \
        " ($(bashio::info.arch) / $(bashio::info.machine))"
    bashio::log.blue " Home Assistant Core: $(bashio::info.homeassistant)"
    bashio::log.blue " Home Assistant Supervisor: $(bashio::info.supervisor)"

    bashio::log.blue \
        '-----------------------------------------------------------'
    bashio::log.blue \
        ' Please, share the above information when looking for help'
    bashio::log.blue \
        ' or support in, e.g., GitHub, forums or the Discord chat.'
    bashio::log.blue \
        '-----------------------------------------------------------'
    bashio::log.blue 'Yo Adrian 4'
    #echo "Hi there"
    #echo "This is an Error message." >&2
    #java --version #here, now
    #unzip -h #not here
    #gzip -h #is here
    #tar --help #is here
    #bash -c "echo 'hi'"
    cd /data
    mkdir -p apprun/App
    cd apprun
    if [ -f "App/CasUpdate.sh" ]; then
      echo "CasCon wants update"
      chmod +x App/CasUpdate.sh
      ./App/CasUpdate.sh
      rm App/CasUpdate.sh
    else
      echo "CasCon is up to date"
    fi
    #rm -rf App/CasCon
    if [ ! -d "App/CasCon" ]; then
      echo "Doing Casnic Setup"
      curl -L -s "https://github.com/bitsii/beEmb/releases/download/Genned.30/CasCon.1.33.0.tar.gz" \
        | tar -C /data/apprun/App -zxpf -
    fi
    echo "Starting CasCon"
    ./App/CasCon/bpstart.sh
fi
